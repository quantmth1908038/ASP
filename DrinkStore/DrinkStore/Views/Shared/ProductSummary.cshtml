@model Product

<div class="card m-1 p-1">
    <div class="p-1">
        <h4>@Model.Name</h4>
        <img src="@Model.Image" style="width:200px;height:200px" />
        <span class="badge badge-pill badge-primary" style="float:right">
            <small>@Model.Price.ToString("c")</small>
        </span>
    </div>
    <div class="card-text p-1">
        @Model.Description
    </div>
</div>